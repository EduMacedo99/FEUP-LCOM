#include <lcom/lcf.h>
#include <stdint.h>
#include <stdio.h>
#include <math.h>
#include "sprite.h"

Sprite *create_sprite(const char *pic[], int x, int y,
int xspeed, int yspeed){

  Sprite* sp = (Sprite*) malloc(sizeof(Sprite));
  if(sp==NULL)
    return NULL;

  sp->map = read_xpm(pic, &(sp->width), &(sp->height));
  if(sp->map == NULL){
    free(sp);
    return NULL;
  }

  sp->x = x;
  sp->y = y;
  sp->xspeed = xspeed;
  sp->yspeed = yspeed;
  return sp;
}

void destroy_sprite(Sprite* sp){

    if(sp == NULL)
      return;

    if(sp->map)
      free(sp->map);

    free(sp);
    sp = NULL;
}
